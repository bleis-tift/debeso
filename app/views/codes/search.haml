.container
  .well
    .row
      .span14
        %ul
          - @snippets.each do |snippet|
            %li
              %a{:href => url_for(:codes, :edit, :id => snippet.sha1_hash)}= snippet.file_name
              - unless @search_result[snippet.sha1_hash].nil?
                .summary
                  - @search_result[snippet.sha1_hash].sort.each do |key, value|
                    %div
                      %span10~ "#{key}: #{value.gsub(' ', '&nbsp;')}"
